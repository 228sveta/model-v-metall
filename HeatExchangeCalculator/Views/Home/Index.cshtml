@model HeatExchangeCalculator.Models.CalculationParameters
@{
    ViewData["Title"] = "Калькулятор теплообмена - Ввод параметров";
}

<div class="text-center">
    <h1 class="display-4 mb-4">🧪 Калькулятор теплообмена</h1>
    <p class="lead">Расчет противоточного теплообмена в плотном продуваемом слое</p>
</div>

<form method="post" asp-action="Calculate" class="mt-4">
    <div class="row">
        <!-- Параметры слоя -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5>📏 Параметры слоя</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="LayerHeight" class="form-label"></label>
                        <input type="number" step="0.1" class="form-control" 
                               asp-for="LayerHeight">
                        <span asp-validation-for="LayerHeight" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="ApparatusDiameter" class="form-label"></label>
                        <input type="number" step="0.1" class="form-control" 
                               asp-for="ApparatusDiameter">
                        <span asp-validation-for="ApparatusDiameter" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <!-- Параметры материала -->
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5>⚙️ Параметры материала</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="MaterialFlowRate" class="form-label"></label>
                        <input type="number" step="0.01" class="form-control" 
                               asp-for="MaterialFlowRate">
                        <span asp-validation-for="MaterialFlowRate" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="MaterialHeatCapacity" class="form-label"></label>
                        <input type="number" step="0.01" class="form-control" 
                               asp-for="MaterialHeatCapacity">
                        <span asp-validation-for="MaterialHeatCapacity" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="InitialMaterialTemperature" class="form-label"></label>
                        <input type="number" class="form-control" 
                               asp-for="InitialMaterialTemperature">
                        <span asp-validation-for="InitialMaterialTemperature" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Параметры газа -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5>🌬️ Параметры газа</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="GasVelocity" class="form-label"></label>
                        <input type="number" step="0.01" class="form-control" 
                               asp-for="GasVelocity">
                        <span asp-validation-for="GasVelocity" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="GasHeatCapacity" class="form-label"></label>
                        <input type="number" step="0.01" class="form-control" 
                               asp-for="GasHeatCapacity">
                        <span asp-validation-for="GasHeatCapacity" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="InitialGasTemperature" class="form-label"></label>
                        <input type="number" class="form-control" 
                               asp-for="InitialGasTemperature">
                        <span asp-validation-for="InitialGasTemperature" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <!-- Коэффициенты -->
            <div class="card mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5>📊 Коэффициенты</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="VolumetricHeatTransferCoefficient" class="form-label"></label>
                        <input type="number" step="1" class="form-control" 
                               asp-for="VolumetricHeatTransferCoefficient">
                        <span asp-validation-for="VolumetricHeatTransferCoefficient" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Сообщения об ошибках валидации -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <h5>❌ Исправьте ошибки в форме:</h5>
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    }
    
    <!-- Кнопки -->
    <div class="row mt-4">
        <div class="col-md-12 text-center">
            <button type="submit" class="btn btn-primary btn-lg">
                🧮 Рассчитать
            </button>
            <button type="reset" class="btn btn-secondary btn-lg">
                🔄 Сбросить
            </button>
        </div>
    </div>
    @section Scripts {
    <script src="~/js/validation.js"></script>
}
</form>