@model HeatExchangeCalculator.Models.CalculationParameters
@{
    ViewData["Title"] = "Калькулятор теплообмена - Ввод параметров";
}

<div class="text-center">
    <h1 class="display-4 mb-4">🧪 Калькулятор теплообмена</h1>
    <p class="lead">Расчет противоточного теплообмена в плотном продуваемом слое</p>
</div>

<form method="post" asp-action="Calculate" class="mt-4">
    <div class="row">
        <!-- Параметры слоя -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5>📏 Параметры слоя</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Высота слоя, м</label>
                        <input type="number" step="0.1" class="form-control" 
                               asp-for="LayerHeight" value="3.0">
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Диаметр аппарата, м</label>
                        <input type="number" step="0.1" class="form-control" 
                               asp-for="ApparatusDiameter" value="2.2">
                    </div>
                </div>
            </div>
            
            <!-- Параметры материала -->
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5>⚙️ Параметры материала</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Расход материалов, кг/с</label>
                        <input type="number" step="0.01" class="form-control" 
                               asp-for="MaterialFlowRate" value="1.68">
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Теплоемкость материалов, кДж/(кг·К)</label>
                        <input type="number" step="0.01" class="form-control" 
                               asp-for="MaterialHeatCapacity" value="1.49">
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Начальная температура материала, °C</label>
                        <input type="number" class="form-control" 
                               asp-for="InitialMaterialTemperature" value="0">
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Параметры газа -->
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header bg-info text-white">
                    <h5>🌬️ Параметры газа</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Скорость газа, м/с</label>
                        <input type="number" step="0.01" class="form-control" 
                               asp-for="GasVelocity" value="0.74">
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Теплоемкость газа, кДж/(м³·К)</label>
                        <input type="number" step="0.01" class="form-control" 
                               asp-for="GasHeatCapacity" value="1.35">
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Начальная температура газа, °C</label>
                        <input type="number" class="form-control" 
                               asp-for="InitialGasTemperature" value="750">
                    </div>
                </div>
            </div>
            
            <!-- Коэффициенты -->
            <div class="card mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5>📊 Коэффициенты</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Объемный коэффициент теплоотдачи, Вт/(м³·К)</label>
                        <input type="number" step="1" class="form-control" 
                               asp-for="VolumetricHeatTransferCoefficient" value="2440">
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Кнопки -->
    <div class="row mt-4">
        <div class="col-md-12 text-center">
            <button type="submit" class="btn btn-primary btn-lg">
                🧮 Рассчитать
            </button>
            <button type="reset" class="btn btn-secondary btn-lg">
                🔄 Сбросить
            </button>
        </div>
    </div>
</form>

